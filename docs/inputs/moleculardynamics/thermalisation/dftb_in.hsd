Geometry = GenFormat {
  <<< "geom.gen"
}

Driver = VelocityVerlet{
  TimeStep [fs] = 1.0
  Thermostat = NoseHoover {
    Temperature [Kelvin] = 400
    CouplingStrength [cm^-1] = 3200
  }
  Steps = 20000
  MovedAtoms = 1:-1
  MDRestartFrequency = 100
}


Hamiltonian = DFTB {
  SCC = Yes
  MaxSCCIterations = 1000
  Filling = Fermi {
    Temperature [Kelvin] = 400
  }
  SlaterKosterFiles = Type2FileNames {
    Prefix = "../../slako/"
    Separator = "-"
    Suffix = ".skf" 
  }
  MaxAngularMomentum = {
    H = "s"
    O = "p"
    C = "p"
  }
}

Options = {
  RandomSeed = 3871906
  WriteDetailedOut = No
  WriteBandOut = No
}
